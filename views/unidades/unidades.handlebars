{{> navbar}}
<div class="container page-margin-top">
  <div class="row">
    <div class="col-2">{{> navUnidades}}</div>
    <div class="col-10">
      <h1>Dados da unidade selecionada</h1>

      <div class="list-group">
        <a href="#" class="list-group-item list-group-item-action flex-column align-items-start active">
          <div class="d-flex w-100 justify-content-between">
            <h5 class="mb-1">{{listarund.nome}}</h5>
          </div>
          <p class="mb-1">CNPJ: {{listarund.cnpj}}</p>
          <p class="mb-1">Endereço: {{listarund.endereco}}</p>
          <p class="mb-1">Telefone: {{listarund.telefone}}</p>
        </a>

      </div>


      <div class="btn-group" role="group" aria-label="Exemplo básico">
        <a href="/unidades/und/edit/{{listarund.cnpj}}"><button type="button"
            class="btn btn-secondary">Editar</button></a>
        <a href="/unidades/und/remove/{{listarund.cnpj}}"><button type="button"
            class="btn btn-secondary">Excluir</button></a>
      </div>
    </div>
  </div>
</div>